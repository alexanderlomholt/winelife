<body class="background-image-form-sign_up">
	<div class="main-content-login">	
		<form action="/users" method="post">
			<div class="form-inputs">

				<div class="page__section">
					<h3>Sign up</h3>


					<label class="field field_type2">

						<input class="field__input" name="user[email]" placeholder="e.g. email@gmail.com">
						<span class="field__label-wrap">
							<span class="field__label">Enter your email</span>
						</span>
					</label>

					<label class="field field_type2">
						<input class="field__input" name="user[password]" type="password" placeholder="e.g. *******">

						<span class="field__label-wrap">
							<span class="field__label">Enter your password</span>
						</span>
					</label>
				</div>	
			</div>
			<div class="button-submit-form">
				<input type="submit" name="" class="submit-btn-home" >
			</div>
		</form>

		<div class="sign-up-link text-center">	
			<%= link_to t("Log in", default: "LOG IN"), new_session_path(resource_name), class: "sign-in-link" %>
		</div>

	</div>
</body>



