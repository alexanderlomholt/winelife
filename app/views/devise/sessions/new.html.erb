<body class="background-image-form">
	<div class="main-content-signup">
		<form action="users/sign_in" method="post">
			<div class="page__section">
				<label class="field field_type2">

					<input class="field__input" placeholder="e.g. email@gmail.com">
					<span class="field__label-wrap">
						<span class="field__label">Enter your email</span>
					</span>
				</label>

				<label class="field field_type2">
					<input class="field__input" type="password" placeholder="e.g. *******">

					<span class="field__label-wrap">
						<span class="field__label">Enter your password</span>
					</span>
				</label>
			</div>	
			<div class="button-submit-form">
				<%= link_to t(".sign_in", default: "LOG IN"), new_user_session_path, class: "submit-btn-home"%>
			</div>
		</form>
 
		<div class="sign-up-link text-center">	
			<%= link_to t(".sign_up", default: "CREATE AN ACCOUNT"), new_user_registration_path, class: "sign-up-link" %>
		</div>

		<div class="forgot-password text-center">
			<%= link_to "Forgot your password?", new_password_path(resource_name) %>
		</div>

	</div>
</body>

