   <div class="main-container">
    <div class="header">
      <div class="back-btn">
        <i class="fas fa-arrow-left"></i>
      </div>
      <div class="favorite">
        <i class="fas fa-heart"></i>
      </div>
    </div>
    <div class="product-image">
      <img src="http://s7d9.scene7.com/is/image/SAQ/12868835-1" alt="">
    </div>
