<div class="container main-content">

  <div class="row no-margin">
    <form action="/" method="POST">

    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
        <input type="checkbox" value="selected" name="red">
        <span class="checkmark">
          <div class="checkmark-content">
            <%= image_tag "wine.png" %>
            <p>Red</p>
          </div>
        </span>
      </label>
    </div>
    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
        <input type="checkbox" value="selected" name="white">
        <span class="checkmark">
          <div class="checkmark-content">
            <%= image_tag "wine.png" %>
            <p>White</p>
          </div>
        </span>
      </label>
    </div>
    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
        <input type="checkbox" value="selected" name="rose">
        <span class="checkmark">
          <div class="checkmark-content">
            <%= image_tag "wine.png" %>
            <p>Ros√©</p>
          </div>
        </span>
      </label>
    </div>

    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
         <input type="checkbox" value="selected" name="meat">
         <span class="checkmark">
           <div class="checkmark-content">
             <%= image_tag "006-steak.png", class: "addwhite" %>
             <p>Meat & poultry</p>
           </div>
         </span>
      </label>
    </div>
    <div class="col-xs-4 selection-btn">
       <label class="cb-container">
         <input type="checkbox" value="selected" name="fish">
         <span class="checkmark">
           <div class="checkmark-content">
             <%= image_tag "023-fish.png" %>
             <p>Fish & seafood</p>
           </div>
         </span>
       </label>
    </div>
    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
       <input type="checkbox" value="selected" name="cheese">
       <span class="checkmark">
         <div class="checkmark-content">
           <%= image_tag "028-cheese.png" %>
           <p>Cheese</p>
         </div>
       </span>
     </label>
    </div>

    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
       <input type="checkbox" value="selected" name="budget_1">
       <span class="checkmark">
         <div class="checkmark-content">
           <i class="fa fa-dollar"></i>
           <p><15</p>
         </div>
       </span>
     </label>
    </div>
    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
        <input type="checkbox" value="selected" name="budget_2">
         <span class="checkmark">
           <div class="checkmark-content">
             <div>
               <i class="fa fa-dollar"></i>
               <i class="fa fa-dollar"></i>
             </div>
             <p>15-25</p>
           </div>
         </span>
       </label>
    </div>
    <div class="col-xs-4 selection-btn">
      <label class="cb-container">
       <input type="checkbox" value="selected" name="budget_3">
       <span class="checkmark">
         <div class="checkmark-content">
           <div>
             <i class="fa fa-dollar"></i>
             <i class="fa fa-dollar"></i>
             <i class="fa fa-dollar"></i>
           </div>
           <p>25+</p>
         </div>
       </span>
     </label>
    </div>

    <button type="submit" class="submit-btn-search" id="submit_btn">Find your wine</button>

    </form>
  </div>


</div>

<script>
  const submit_btn = document.getElementById("submit_btn");
  const body = document.getElementsByTagName("body")[0];

  submit_btn.addEventListener('click', function() {
    body.insertAdjacentHTML('afterbegin', `
      <div class="loader-container text-center">
        <div>
          <div class="loader"></div>
          <h4>Searching the best rated wines at the nearest SAQ outlet</h4>
        </div>
      </div>
      `)
  });
</script>

