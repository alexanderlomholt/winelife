<div class="wrapper-results">
  <h1 class="list text-center">Your Wine list</h1>
  <div class="container">
  <div class="row">
    <% @wines.each do |wine| %>
      <% counter = 0 %>
  		<div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="winecard">
          <div class="cardheader">
            <div class="rating">
              <p><i class="fa fa-star"></i> <%= wine.rating %></p>
            </div>
            <div class="price">
              <p>$ <%= wine.price %></p>
            </div>
          </div>
          <div class="imgbox">
            <img src="<%= wine.photo_url %>" alt="winebottle">
          </div>
          <h3><%= wine.name %></h3>
          <p><%= @store.banner %> <%= @store.name %></p>
          <p>Available quantity: <%= @wine_availability[counter] %> bottles</p>
          <%= link_to "More details", show_path(wine), class: "main-btn" %>
        </div>
  		</div>
      <% counter += 1 %>
  	<% end %>
  </div>
  <br>
  <p>All of those wines are available at your nearest SAQ:</p>
  <p><%= @store.name %></p>
  <p><%= @store.address %></p>
  </div>
</div>
