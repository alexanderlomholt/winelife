<div class="container">
  <h1 class="list text-center">Your wine list</h1>
	<div class="row">
    <% @wines.each do |wine| %>
  		<div class="col-xs-12 col-sm-4">
  			<div class="white-box">
  				<div>
  					<h2 class="wine-name text-center"> <%= wine.name %> </h2>
  					<div class="card-picture">
  						<img class="product-image" src="<%= wine.photo_url %>" alt="">
  					</div>
  					<p class="card-description text-center"> Excellent Millésime pour ce 1er grand cru classée mondialement connu</p>
  					<div class="card-rating">
  						<p>Rating: <%= wine.rating %></p>
  					</div>
  					<h3 class="card-price"> $<%= wine.price %></h3>
            <%= link_to "More details", show_path(wine), class: "btn-warning btn-lg" %>
  				</div>
  			</div>
  		</div>
		<% end %>
  </div>
</div>

